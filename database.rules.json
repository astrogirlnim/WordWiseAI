{
  /* Visit https://firebase.google.com/docs/database/security to learn more about security rules. */
  "rules": {
    ".read": "auth != null",
    ".write": "auth != null",
    "documents": {
      "$docId": {
        "presence": {
          ".read": "auth != null",
          "$uid": {
            ".write": "auth.uid === $uid",
            ".validate": "!root.child('documents/' + $docId + '/presence').hasChild($uid) && root.child('documents/' + $docId + '/presence').numChildren() < 20"
          }
        },
        "content": {
          ".read": "auth != null",
          ".write": "auth != null"
        }
      }
    }
  }
}

rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read and write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Documents Collection
    match /documents/{documentId} {
      // Allow read if user is owner or has shared access
      allow read: if request.auth != null && 
                     (resource.data.ownerId == request.auth.uid ||
                      (resource.data.sharedWithUids != null && 
                       request.auth.uid in resource.data.sharedWithUids));

      // List queries are allowed for authenticated users
      allow list: if request.auth != null;

      // User must be the owner to create a document
      allow create: if request.auth != null && 
                       request.resource.data.ownerId == request.auth.uid;
      
      // User must be owner or have shared access to update
      allow update: if request.auth != null && 
                       (resource.data.ownerId == request.auth.uid ||
                        (resource.data.sharedWithUids != null && 
                         request.auth.uid in resource.data.sharedWithUids));

      // Only the owner can delete a document
      allow delete: if request.auth != null && 
                       resource.data.ownerId == request.auth.uid;

      // Sub-collections - simplified for now
      match /{collection}/{docId} {
        allow read, write: if request.auth != null;
      }
    }

    // Share Tokens Collection
    match /shareTokens/{tokenId} {
      // Allow read for authenticated users
      allow read: if request.auth != null;

      // Allow create/update/delete for authenticated users
      allow write: if request.auth != null;
    }

    // Audit logs can be created by any authenticated user
    match /auditLogs/{logId} {
      allow create: if request.auth != null;
    }
  }
}
